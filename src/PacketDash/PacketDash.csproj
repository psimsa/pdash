<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>PacketDash</Title>
    <Authors>psimsa</Authors>
    <Description>Simple network performance testing tool</Description>
    <PackageProjectUrl>https://github.com/psimsa/PacketDash</PackageProjectUrl>
    <RepositoryUrl>https://github.com/psimsa/PacketDash</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackAsTool>True</PackAsTool>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>PacketDash</PackageId>
    <AssemblyName>pdash</AssemblyName>
    <RootNamespace>PacketDash</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.3" />
  </ItemGroup>

</Project>
